{
  "name": "liam-frontend",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@changesets/get-github-info": "0.6.0",
    "@changesets/types": "6.1.0",
    "@turbo/gen": "2.5.6",
    "@types/node": "22.18.3",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "9.2.1",
    "knip": "5.63.1",
    "lefthook": "1.13.0",
    "syncpack": "13.0.4",
    "turbo": "2.5.6",
    "typescript": "5.9.2",
    "vercel": "41.7.8",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "turbo build",
    "create-env-files": "([ -f .env ] || touch .env) && ([ -f .env.local ] || touch .env.local)",
    "dev": "turbo dev",
    "fmt": "concurrently \"pnpm:fmt:*\"",
    "fmt:knip": "knip --fix",
    "fmt:syncpack-fix": "syncpack fix-mismatches",
    "fmt:syncpack-format": "syncpack format",
    "fmt:turbo": "turbo fmt",
    "gen:turbo": "turbo gen",
    "lint": "pnpm lint:turbo && pnpm lint:syncpack && pnpm lint:knip",
    "lint:knip": "knip --treat-config-hints-as-errors",
    "lint:syncpack": "syncpack lint",
    "lint:turbo": "turbo lint",
    "prebuild": "pnpm create-env-files",
    "prelint": "pnpm create-env-files",
    "prepare": "lefthook install",
    "release": "pnpm build --filter @liam-hq/cli && pnpm changeset publish",
    "test": "turbo test",
    "test:coverage": "vitest --coverage",
    "test:e2e": "turbo test:e2e",
    "vercel:env-pull": "vercel env pull .env",
    "vercel:link": "vercel link -p liam-app -S \"liambx\" -y"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "pnpm": {
    "onlyBuiltDependencies": [
      "supabase"
    ],
    "overrides": {
      "@radix-ui/react-dialog": "1.1.15",
      "cookie": "^0.7.0",
      "esbuild": "0.25.9",
      "path-to-regexp": "8.3.0",
      "prismjs": "1.30.0",
      "undici": "7.15.0",
      "zod": "3.25.76"
    }
  }
}
