{
  "extends": "@liam-hq/configs/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.cli.tsbuildinfo"
  },
  "include": [
    "src/cli/**/*",
    "src/types/**/*",
    "src/analyzer/**/*",
    "src/llm/**/*",
    "src/reporter/**/*",
    "src/utils/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
