{
  "extends": "@liam-hq/configs/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
