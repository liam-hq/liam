{
  "name": "@liam-hq/pglite-server",
  "description": "TypeScript ESM package for PGlite database instance management",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "publishConfig": {
    "access": "restricted"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@electric-sql/pglite": "0.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@liam-hq/configs": "workspace:*",
    "eslint": "9.31.0",
    "typescript": "5.8.3"
  },
  "scripts": {
    "build": "tsc",
    "fmt": "concurrently \"pnpm:fmt:*\"",
    "fmt:biome": "biome check --write --unsafe .",
    "fmt:eslint": "eslint --fix .",
    "lint": "concurrently \"pnpm:lint:*\"",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit"
  }
}
